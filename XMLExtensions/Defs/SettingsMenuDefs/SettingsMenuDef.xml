<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <XmlExtensions.SettingsMenuDef>
        <defName>HRK_settings_RIMATWARWW2GermanWeapons</defName>
        <modId>Harkon.RIMATWAR.WW2GermanWeapons</modId>
        <label>RIM AT WAR - WW2 German Weapons</label>
        <settings>

            <li Class="XmlExtensions.Setting.Text">
                <text>RIM AT WAR - WW2 German Weapons</text>
                <font>Medium</font>
                <anchor>Middle</anchor>
            </li>

            <!-- ========== TEXTURE SETTINGS ========== -->

            <li Class="XmlExtensions.Setting.GapLine"/>
            <li Class="XmlExtensions.Setting.Text">
                <text>TEXTURE SETTINGS</text>
                <anchor>Middle</anchor>
            </li>

            <li Class="XmlExtensions.Setting.Gap"/>

            <li Class="XmlExtensions.Setting.Text">
                <text>Select any of the options to swap the base texture for the one icluded in the Rim at War alternate style. Have in mind that this will not only replace the base texture with the alternate one but it will also replace the alternate texture with the base one.</text>
                <font>Tiny</font>
            </li>

            <li Class="XmlExtensions.Setting.Gap"/>

            <li Class="XmlExtensions.Setting.SplitColumn">
                <gapSize>70</gapSize>
                <leftCol>

                    <li Class="XmlExtensions.Setting.Checkbox">
                        <label>FG 42 scoped LMG</label>
                        <key>HRK_FG42LMGScoped</key>
                        <defaultValue>true</defaultValue>
                    </li>

                    <li Class="XmlExtensions.Setting.Checkbox">
                        <label>Gewehr 43 scoped</label>
                        <key>HRK_G43RifleScoped</key>
                        <defaultValue>true</defaultValue>
                    </li>

                    <li Class="XmlExtensions.Setting.Checkbox">
                        <label>Karabiner 98k / Kar 98k rifle grenade / Kar 98k sniper </label>
                        <key>HRK_Karabiner98k</key>
                        <defaultValue>true</defaultValue>
                    </li>

                </leftCol>
                <rightCol>

                    <li Class="XmlExtensions.Setting.Checkbox">
                        <label>MP 40 SMG</label>
                        <key>HHRK_MP40SMG</key>
                        <defaultValue>true</defaultValue>
                    </li>

                    <li Class="XmlExtensions.Setting.Checkbox">
                        <label>Luger P08</label>
                        <key>HRK_P08Luger</key>
                        <defaultValue>true</defaultValue>
                    </li>

                    <li Class="XmlExtensions.Setting.Checkbox">
                        <label>StG 44 ARs</label>
                        <key>HRK_StG44AR</key>
                        <defaultValue>true</defaultValue>
                    </li>

                </rightCol>
            </li>

            <li Class="XmlExtensions.Setting.GapLine"/>
            <li Class="XmlExtensions.Setting.Text">
                <text>Remember any change of the settings needs a restart to take effect.</text>
                <font>Tiny</font>
            </li>
            <li Class="XmlExtensions.Setting.Gap"/>
            <li Class="XmlExtensions.Setting.ResetSettings"/>
            <li Class="XmlExtensions.Setting.Gap"/>

        </settings>
    </XmlExtensions.SettingsMenuDef>

</Defs>